---
import '@/styles/global.css'
import AppHeader from '@/components/AppHeader/AppHeader.astro'
import AppFooter from '@/components/AppFooter.astro'
---

<!doctype html>
<html lang='pl'>
  <head>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Marcellus&display=swap');
    </style>
    <link
      href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap'
      rel='stylesheet'
    />
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />

    <meta name='robots' content='index, follow' />
    <meta name='generator' content={Astro.generator} />
    <link rel='canonical' href={'https://fotowasiluk.pl'} />
    <title>Fotograf i kamerzysta ślubny | Biała Podlaska</title>
    <meta
      name='description'
      content={'Nazywam się Tomasz Wasiluk i jako fotograf ślubny w Białej Podlaskiej uwieczniam ślub na zdjęciach i wideo. Zapraszam do zapoznania się z moją ofertą.'}
    />
    <meta name='keywords' content={'Fotografia i film ślubny Biała Podlaska'} />
    <meta property='og:type' content='website' />

    <meta
      property='og:title'
      content={'Fotografia i film ślubny | Tomasz Wasiluk Biała Podlaska'}
    />
    <meta
      property='og:description'
      content={'Nazywam się Tomasz Wasiluk i oferuję w Białej Podlaskiej usługi takie jak fotografi i film ślubny. Zapraszam do zapoznania się z portfolio i ofertą.'}
    />
    <meta property='og:url' content={'https://fotowasiluk.pl'} />
    <meta property='og:image' content={'https://fotowasiluk.pl/og-image.png'} />
    <meta property='og:locale' content={'pl'} />

    <meta name='DC.identifier' content='https://fotowasiluk.pl' />
    <meta name='DC.creator' content='Kacper Saweczko' />
    <meta name='DC.language' content='pl' />
    <meta name='DC.type' content='website' />
    <meta name='DC.format' content='text/html' />
    <meta name='DC.rights' content='Tomasz Wasiluk fotografia i wideo' />
    <meta
      name='DC.subject'
      content={'Nazywam się Tomasz Wasiluk i oferuję w Białej Podlaskiej usługi takie jak fotografi i film ślubny. Zapraszam do zapoznania się z portfolio i ofertą.'}
    />
    <script is:inline type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Tomasz Wasiluk fotografia i wideo",
        "image": "https://fotowasiluk.pl/logo.ico",
        "@id": "https://fotowasiluk.pl",
        "url": "https://fotowasiluk.pl",
        "telephone": "+48 503 172 772",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "ul. Brzeska 6",
          "addressLocality": "Biała Podlaska",
          "postalCode": "21-500",
          "addressCountry": "PL"
        },

        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        "founder": {
          "@type": "Person",
          "name": "Tomasz Wasiluk"
        },
        "identifier": [
          {
            "@type": "PropertyValue",
            "propertyID": "NIP",
            "value": "5371701283"
          }
        ],
        "description": "Tomasz Wasiluk fotografia i wideo",
        "email": "adwokat.dzyr@wp.pl"
      }
    </script>
  </head>
  <body class='overflow-x-hidden flex flex-col'>
    <AppHeader />

    <slot />

    <AppFooter />
  </body>

  <script>
    import Lenis from 'lenis'
    declare global {
      interface Window {
        lenis: Lenis
      }
    }
    window.lenis = new Lenis({ autoRaf: true })
  </script>
</html>
